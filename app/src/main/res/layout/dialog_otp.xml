<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:padding="20dp"
    android:layout_gravity="center">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter recover code"
        android:textColor="#9c162c"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />


    <!-- OTP Input Fields -->
    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:textColor="#9c162c"
            android:background="@drawable/spinner_dropdown_background"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:textColor="#9c162c"
            android:background="@drawable/spinner_dropdown_background"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:textColor="#9c162c"
            android:background="@drawable/spinner_dropdown_background"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:textColor="#9c162c"
            android:background="@drawable/spinner_dropdown_background"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/otp5"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:textColor="#9c162c"
            android:background="@drawable/spinner_dropdown_background"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/otp6"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:textColor="#9c162c"
            android:background="@drawable/spinner_dropdown_background"/>
    </LinearLayout>

    <!-- Verify Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_login_button"
            android:padding="10dp"
            android:text="VERIFY CODE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            app:backgroundTint="#9c162c" />
    </LinearLayout>

    <!-- Timer and Resend Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Authentication will expire after 180 seconds"
        android:textColor="#FF5722"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/tvResend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Resend recover code"
        android:textColor="#9c162c"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>