<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:elevation="4dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="#9c162c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- ShapeableImageView để bo tròn ảnh -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_blog"
            android:layout_width="93dp"
            android:layout_height="88dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/com_facebook_button_icon"
            app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtBlogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blog Title"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBlogDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Blog description goes here..."
                android:textColor="#F5F5F5"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtBlogAuthorTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="end"
                android:text="Author • 20/06/2025"
                android:textColor="#F5F5F5"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
