<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9AFA6">

    <!-- Thanh tìm kiếm và icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A01B1B"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_back"
            android:tint="#fff" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle"
            android:drawableLeft="@mipmap/ic_searchsmall"
            android:hint="Flash Deals"
            android:paddingLeft="12dp"
            android:textColor="#fff"
            android:textColorHint="#625858" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@mipmap/ic_cart"
            android:tint="#fff" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_account_footer_white"
            android:tint="#fff" />
    </LinearLayout>

    <!-- Banner Flash Deals + Countdown -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A01B1B"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/title_flashdeals"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/title_end_in"
            android:textColor="#fff"
            android:textSize="16sp" />

        <!-- Countdown -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtHour"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_timer"
                android:gravity="center"
                android:text="03"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/txtMinute"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_timer"
                android:gravity="center"
                android:text="06"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/txtSecond"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_timer"
                android:gravity="center"
                android:text="24"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Thanh trạng thái Ongoing/Upcoming -->
    <!-- Thanh trạng thái Ongoing/Upcoming -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Ongoing -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/txtOngoing"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/title_on_going"
                android:textAlignment="center"
                android:textColor="#A01B1B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOngoingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12:00 - 20:00"
                android:textColor="#A01B1B"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Upcoming -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/txtUpcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_upcoming"
                android:textAlignment="center"
                android:textColor="#B0B0B0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtUpcomingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="22:00 - 23:59"
                android:textColor="#B0B0B0"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


    <!-- Tabs danh mục -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="All"
                android:textColor="#A01B1B" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="Toys"
                android:textColor="#A01B1B" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="Food"
                android:textColor="#A01B1B" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="#FFFFFF"
                android:text="Accessories"
                android:textColor="#A01B1B" />
            <!-- Thêm các tab khác nếu cần -->
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Danh sách sản phẩm -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFlashDeal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:background="#F9AFA6"/>
</LinearLayout>
