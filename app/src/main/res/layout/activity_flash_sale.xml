<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#F9AFA6">

    <!--  Thanh tìm kiếm và icon  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A01B1B"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_back"
            app:tint="#fff"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle"
            android:drawableLeft="@mipmap/ic_searchsmall"
            android:hint="@string/hint_flashdeals"
            android:paddingLeft="12dp"
            android:textColor="#fff"
            android:textColorHint="#625858"/>

        <ImageView
            android:id="@+id/icCart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@mipmap/ic_cart"
            app:tint="#fff"/>

        <ImageView
            android:id="@+id/icAccount"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_account_footer_white"
            app:tint="#fff"/>

    </LinearLayout>

    <!--  Banner Flash Deals + Countdown  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A01B1B"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/title_flash_deals"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/title_end_in"
            android:textColor="#fff"
            android:textSize="16sp"/>

        <!--  Countdown  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtHour"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="03"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtMinute"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="06"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/txtSecond"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="24"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/tabContainer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Tabs sẽ được tạo động trong code -->

    </LinearLayout>

    <!--  Tabs danh mục  -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <Button
                android:id="@+id/btnAll"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#A01B1B"
                android:text="@string/title_all"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnFoodTreat"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="@string/title_food_treat"
                android:textColor="#A01B1B"/>

            <Button
                android:id="@+id/btnPetCare"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="@string/title_pet_care"
                android:textColor="#A01B1B"/>

            <Button
                android:id="@+id/btnFurniture"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="@string/title_furniture"
                android:textColor="#A01B1B"/>

            <Button
                android:id="@+id/btnToys"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="@string/title_toys"
                android:textColor="#A01B1B"/>

            <Button
                android:id="@+id/btnAccessories"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="@string/title_accessories"
                android:textColor="#A01B1B"/>

            <Button
                android:id="@+id/btnCarriers"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:backgroundTint="#FFFFFF"
                android:text="@string/title_carriers"
                android:textColor="#A01B1B"/>

        </LinearLayout>

    </HorizontalScrollView>


    <!--  Danh sách sản phẩm  -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFlashDeal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:background="#F9AFA6"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"/>
</LinearLayout>
