<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#fff"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:id="@+id/main"
    android:gravity="center_vertical">

    <!--  Ảnh sản phẩm  -->
    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="145dp"
        android:layout_height="136dp"
        android:layout_marginEnd="12dp"
        android:scaleType="fitCenter"/>

    <!--  Thông tin sản phẩm  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--  Tên sản phẩm  -->
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Tên sản phẩm"
                android:textColor="#222"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!--  Đánh giá + Rating  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="2dp"
                    android:src="@mipmap/ic_star"/>

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="4.5"
                    android:textColor="#FFA000"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvRatingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(120)"
                    android:textColor="#999"
                    android:textSize="12sp"/>

            </LinearLayout>

            <!--  Giá  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSalePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="48.000đ"
                    android:textColor="#E53935"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60.000đ"
                    android:textColor="#B0B0B0"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="#922929"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:text="-20%"
                    android:textColor="#fff"
                    android:textSize="13sp"/>

            </LinearLayout>

            <!--  Progress Bar  -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="60"
                android:progressTint="#A01B1B"
                android:progressBackgroundTint="#E0E0E0"/>

            <!--  Số lượng đã bán và còn lại  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUnitSold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 đã bán"
                    android:textColor="#999"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Còn 75 sản phẩm"
                    android:textColor="#999"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <!--  Nút mua ngay  -->
        <Button
            android:id="@+id/btnBuyNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="8dp"
            android:backgroundTint="#A01B1B"
            android:text="@string/title_buy_now"
            android:textColor="#fff"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>
