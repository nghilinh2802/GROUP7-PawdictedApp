<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/status_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAD793"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- STEP 1 -->
    <LinearLayout
        android:id="@+id/step_pending"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/icon_pending"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_to_confirm_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Pending Payment"
            android:textColor="#BB8866"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- LINE -->
    <View
        android:layout_width="24dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="2dp"
        android:background="#BB8866" />

    <!-- STEP 2 -->
    <LinearLayout
        android:id="@+id/step_shipped"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/icon_shipped"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_to_pickup_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Shipped"
            android:textColor="#BB8866"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="24dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="2dp"
        android:background="#BB8866" />

    <!-- STEP 3 -->
    <LinearLayout
        android:id="@+id/step_out"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/icon_out"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_to_ship_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Out for Delivery"
            android:textColor="#BB8866"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="24dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="2dp"
        android:background="#BB8866" />

    <!-- STEP 4 -->
    <LinearLayout
        android:id="@+id/step_completed"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/icon_completed"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_completed_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Completed"
            android:textColor="#BB8866"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
