<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:padding="20dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <!-- Checkmark Icon -->
        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@mipmap/ic_logo"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Paw'dicted!"
            android:textColor="#9c162c"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9c162c"

            android:layout_marginBottom="10dp"/>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Your account is all set up! \n Log in to begin shopping for your \n petsâ€™ favorite toys, food, and more."
            android:textColor="#333333"
            android:textSize="16sp"
            android:gravity="center"

            android:layout_marginBottom="16dp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLoginWithNewAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_login_button"
            android:text="LOGIN WITH NEW ACCOUNT"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            app:backgroundTint="#9c162c" />
    </LinearLayout>
</LinearLayout>