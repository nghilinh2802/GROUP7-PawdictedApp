<resources>
    <!-- Theme mặc định của ứng dụng (nếu cần) -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Các thuộc tính khác -->
    </style>

    <!-- Style cho TextView cột trái (in đậm) -->
    <style name="TableTextViewBold">
        <item name="android:fontFamily">@font/inter_tight_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SendButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#A62332</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="rippleColor">#8B1E2A</item>
    </style>
    <style name="RedRoundButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#A62332</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="rippleColor">#8B1E2A</item>
    </style>


    <!-- Style cho TextView cột phải và hàng 1 ô (không in đậm) -->
    <style name="TableTextViewNormal">
        <item name="android:fontFamily">@font/inter_tight_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="RoundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="CategoryTab">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#A01B1B</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColorPrimary">#9C162C</item>
    </style>

</resources>